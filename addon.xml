<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.playlistgenerator" name="Playlist G-enerator" version="2.0.3" provider-name="Tha-G-Thang">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="plugin.video.youtube" version="7.0.1" optional="true"/>
    </requires>
    
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="service.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Powerful Playlist G-enerator for your 'HARD-to-Scrape' Media</summary>
        <description lang="en">
            Generates highly customized video Playlists.
            Specializes in organizing 'HARD-to-scrape' video collections.
            Features include:
            - Smart folder scanning
            - Custom sorting options
            - Advanced media filtering
            - Chatbot-assisted playlist creation
        </description>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        <no_texture>true</no_texture>
        </assets>
        <platform>all</platform>
        <license>GPL-3.0</license>
    </extension>
</addon>